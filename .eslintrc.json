{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ], 
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },   
    "parser": "babel-eslint",
    "rules": {
        "indent": [ "error", 2, { "SwitchCase": 1 } ],
        "no-console": "off",
        "no-alert": "off",
        "no-undef": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-self-assign": "off"
    }
}